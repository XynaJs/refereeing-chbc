@using Microsoft.AspNetCore.Identity
@using RefereeingCHBC.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    @using(Html.BeginForm("Logout", "Account", FormMethod.Post, new { id = "logoutForm" })){
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a class="nav-link" id="Manage-Index" href="@Url.Action("Index","Manage")" title="Manage">Salut @UserManager.GetUserAsync(User).Result.NameFirst @UserManager.GetUserAsync(User).Result.NameLast !</a>
            </li>
            <li>
                <button type="submit" class="btn btn-danger">Déconnexion</button>
            </li>
        </ul>
    }
}
else
{
    <a class="nav-link" id="Account-Login" href="@Url.Action("Login","Account")">Connexion</a>
}
